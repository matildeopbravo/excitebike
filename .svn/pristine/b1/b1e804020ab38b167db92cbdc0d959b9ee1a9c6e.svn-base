desenhaImagemBackground :: EstadoMestre -> Picture
desenhaImagemBackground  (EstadoMestre menus@(e:es) _ _ ttap _ opcoes sprites) = case e of (Elemento {idEspecial ="pstart"}) -> Scale 2 2 (Pictures (desenhaInterface (menusRelevantes menus) opcoes (sprites!!0)))
                                                                                           (Elemento "mainmenu" _ _ (Lista {indiceCursor = i})) -> if i == 0 then ((carregaImagem "qpSelecionada" (head sprites) (0.73,0.73)))
                                                                                           else if (i == 1) then  (carregaImagem "campanhaSelecionada" (head sprites) (0.73,0.73)) 
                                                                                           else (carregaImagem "controlosSelecionados" (head sprites) (0.73,0.73))
                                                                                           Elemento {idEspecial="quickplay", menu =MenuQP {indiceCursor=i, opcoesqp = op@(OpcoesQP {isOpen =  True})}} -> if (i == 0 && opcaoSelecionada op) then (carregaImagem "ajustaPistas" (head sprites) (0.73,0.73)) 
                                                                                                                                                                                              else  if (i == 0) then (carregaImagem "tituloNumeroPistas" (head sprites) (0.73,0.73)) 
                                                                                                                                                                                              else if (i ==1 && opcaoSelecionada op) then (carregaImagem "ajustaComprimento" (head sprites) (0.73,0.73))
                                                                                                                                                                                              else if (i == 1 ) then (carregaImagem "tituloComprimento" (head sprites) (0.73,0.73)) 
                                                                                                                                                                                              else if (i == 2 && opcaoSelecionada op) then (carregaImagem "ajustaBots" (head sprites) (0.73,0.73)) 
                                                                                                                                                                                              else if (i == 2) then (carregaImagem "tituloNBots" (head sprites) (0.73,0.73)) 
                                                                                                                                                                          
                                                                                                                                                                                              else (carregaImagem "retroceder" (head sprites) (0.73,0.73)) 
                                                                                           otherwise -> (carregaImagem "tituloNumeroPistas" (head sprites) (0.73,0.73))  
